@model IEnumerable<Ticket_Tracker.DAL.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-9 col-sm-9 col-xs-7">
        <h1>All Customers</h1>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-5 top-pad">
        @Html.ActionLink("Add New Customer", "Create", "Customers", null, new { @class = "btn btn-primary pull-right" })
    </div>
</div>

<div class="row top-pad">
    <div class="col-md-12">
        <table id="table_id" class="display">

            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Active)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ServiceDuration)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NumOpenTickets)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NumOpenTicketsRelayware)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NumOpenTicketsCust)</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => customer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => customer.Active)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => customer.ServiceDuration)
                        </td>
                        <td id="num-open-tickets-@customer.CustomerId">
                            @Html.DisplayFor(modelItem => customer.NumOpenTickets)
                        </td>
                        <td id="num-open-rw-@customer.CustomerId">
                            @Html.DisplayFor(modelItem => customer.NumOpenTicketsRelayware)
                        </td>
                        <td id="num-open-cust-@customer.CustomerId">
                            @Html.DisplayFor(modelItem => customer.NumOpenTicketsCust)
                        </td>
                        <td>
                            <!-- Split button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    Options <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right" role="menu">
                                    <li><a class="customerInformation" href="#" data-id="@customer.CustomerId">More Information</a></li>
                                    <li class="divider"></li>
                                    <li>
                                    <li>@Html.ActionLink("Edit Customer", "Edit", "Customers", new { id = customer.CustomerId }, null)</li>
                                    <li>@Html.ActionLink("Delete Customer", "Delete", "Customers", new { id = customer.CustomerId }, null)</li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="customerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modal-ticket-name">Customer Information</h4>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().Name)
                    </dt>
                    <dd id="modal-customer-name">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().Active)
                    </dt>
                    <dd id="modal-customer-active">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().ServiceDuration)
                    </dt>
                    <dd id="modal-customer-servDuration">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().ServiceStartDate)
                    </dt>
                    <dd id="modal-customer-servStartDate">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().ServiceEndDate)
                    </dt>
                    <dd id="modal-customer-servEndDate">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().MainCustomerContact)
                    </dt>
                    <dd id="modal-customer-mainContact">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().NumOpenTickets)
                    </dt>
                    <dd id="modal-customer-numOpTickets">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().NumOpenTicketsCust)
                    </dt>
                    <dd id="modal-customer-numOpCust">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().NumOpenTicketsRelayware)
                    </dt>
                    <dd id="modal-customer-numOpRW">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().NumClosedTickets)
                    </dt>
                    <dd id="modal-customer-numClosedTickets">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().RelaywareContact)
                    </dt>
                    <dd id="modal-customer-rwContact">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().RelaywareResource)
                    </dt>
                    <dd id="modal-customer-rwResource">
                        Placeholder
                    </dd>
                    <dt>
                        @Html.LabelFor(model => model.FirstOrDefault().NotesOne)
                    </dt>
                    <dd id="modal-customer-notes">
                        Placeholder
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section stylesheets
{
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">

}

@section scripts
{
    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>

    <script type="text/javascript" charset="utf8" src="~/Scripts/custom-script.js"></script>

    <script>
        $(document).ready(function () {
            $('.display').DataTable();
        });
    </script>
}
